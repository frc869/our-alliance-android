<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mechinn.android.ouralliance"
    android:versionCode="11"
    android:versionName="2013.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mechinn.android.ouralliance.view.TeamListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mechinn.android.ouralliance.view.TeamDetailActivity"
            android:label="@string/title_team_detail"
            android:parentActivityName=".view.TeamListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.TeamListActivity" />
        </activity>
        <activity android:name="com.mechinn.android.ouralliance.view.SettingsActivity"
            android:label="@string/title_team_detail"
            android:parentActivityName=".view.SettingsActivity">
        </activity>
        <provider 
            android:name="com.mechinn.android.ouralliance.DataProvider"
            android:authorities="com.mechinn.android.ouralliance.data"
            android:logo="@drawable/ic_launcher"
            android:icon="@drawable/ic_launcher"
            android:label="@string/provider_name"
            android:enabled="true"
            android:multiprocess="true"
            android:exported="false">
        </provider>
    </application>

</manifest>