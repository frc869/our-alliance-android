<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="vertical" >
        
        <LinearLayout
	        android:id="@+id/teamLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    
                    <TextView
	                    android:id="@+id/teamLabel"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/teamLabel"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	                
	                <TextView
			            android:id="@+id/teamNumber"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textAppearance="?android:attr/textAppearanceMedium" />
	                
                </LinearLayout>
                
                <Button
				    android:id="@+id/takePicButton"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/takePic" />

                <Button
                    android:id="@+id/deletePicButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deletePic" />

            </LinearLayout>

	        <ImageView
			    android:id="@+id/teamPic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:adjustViewBounds="true"
			    android:contentDescription="@string/teamPic"
			    android:scaleType="centerInside"
			    android:src="@drawable/frc"
	        	android:layout_margin="1dip" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/orientationLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/orientation"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/orientation"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <RadioGroup
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:orientation="horizontal">
		        <RadioButton
		            android:id="@+id/orientationLong"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/orientationLong" />
		
		
		        <RadioButton
		            android:id="@+id/orientationWide"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/orientationWide" />
		
		
		        <RadioButton
		            android:id="@+id/orientationSquare"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/orientationSquare" />
		
		
		        <RadioButton
		            android:id="@+id/orientationOther"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/orientationOther" />
		    </RadioGroup>
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/wheelLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/wheelLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/wheelLabel"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	        
	        <Spinner
	            android:id="@+id/wheelSpinner"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:entries="@array/wheels" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/typeLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/typeLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/typeLabel"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	        
			<RadioGroup
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:orientation="horizontal">
		        <RadioButton
		            android:id="@+id/has1WheelTypes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/one" />
		
		        <RadioButton
		            android:id="@+id/has2WheelTypes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/two" />
		    </RadioGroup>
	
	        <CheckBox
	            android:id="@+id/hasDeadWheel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/hasDeadWheel" />
	
	    </LinearLayout>
	
	    <TableLayout
	        android:id="@+id/wheelTypeTable"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="1dip" >
	        <TableRow
	            android:id="@+id/wheelTypeHeader"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <TextView
	                android:id="@+id/wheelTypeLabel"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/wheelTypeLabel"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
	            <TextView
	                android:id="@+id/wheelDiameterLabel"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/wheelDiameterLabel"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
	            
	        </TableRow>
	        
	        <TableRow
	            android:id="@+id/wheel1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	
	            <Spinner
	                android:id="@+id/wheel1Type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="1dip"
	                android:layout_weight="1"
	                android:entries="@array/wheelTypes"
	                android:gravity="center" />

	            <EditText
	                android:id="@+id/wheel1Diameter"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
	
	        </TableRow>
	
	        <TableRow
	            android:id="@+id/wheel2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <Spinner
	                android:id="@+id/wheel2Type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="1dip"
	                android:layout_weight="1"
	                android:entries="@array/wheelTypes"
	                android:gravity="center" />

	            <EditText
	                android:id="@+id/wheel2Diameter"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
	        </TableRow>
	
	        <TableRow
	            android:id="@+id/deadWheels"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	            
	            <Spinner
	                android:id="@+id/deadWheelType"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="1dip"
	                android:layout_weight="1"
	                android:entries="@array/deadWheelTypes"
	                android:gravity="center" />
	            
	        </TableRow>
	
	    </TableLayout>

	    <TableLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="1dip" >
	        <TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	        
		        <CheckBox
		            android:id="@+id/turretShooter"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/turretShooter"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
	
		        <CheckBox
		            android:id="@+id/autoTracking"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/autoTracking"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
		        
		        <CheckBox
		            android:id="@+id/fenderShooter"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/fenderShooter"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
	        
	    	</TableRow>
	        <TableRow
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" >
	        
		        <CheckBox
		            android:id="@+id/keyShooter"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/keyShooter"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
		        
		        <CheckBox
		            android:id="@+id/crossesBarrier"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/crossesBarrier"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
		        
		        <CheckBox
		            android:id="@+id/climbBridge"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/climbBridge"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />
	        
	    	</TableRow>
	    	
	        <TableRow
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
	
		        <CheckBox
		            android:id="@+id/autonomous"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/autonomous"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" />

		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
	                android:gravity="center"
	            	android:layout_margin="1dip"
	                android:layout_weight="1" >

		        </TextView>
		        
		        <Button
			        android:id="@+id/pickComp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/pickComp"
	                android:gravity="center"
	                android:layout_weight="1"
	            	android:layout_margin="1dip" />
	
		    </TableRow>
	    </TableLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="1dip" >
	
		        <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/avgHoops" />
	            
	            <TextView
	                android:id="@+id/avgHoops"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/avgBalance" />
	            
	            <TextView
	                android:id="@+id/avgBalance"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/avgBroke" />
	            
	            <TextView
	                android:id="@+id/avgBroke"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
                	android:gravity="center"
	                android:layout_weight="1" />
	
	    </LinearLayout>
	    <TextView
	        android:id="@+id/notesLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/notesLabel"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <EditText
	        android:id="@+id/notes"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:inputType="textMultiLine" />
	    
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	        <Button
		        android:id="@+id/save"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/save"
                android:layout_weight="1"
                android:gravity="center" />
	        
	        <Button
		        android:id="@+id/discard"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/discard"
                android:layout_weight="1"
                android:gravity="center" />
	    </LinearLayout>

    </LinearLayout>
</ScrollView>

    